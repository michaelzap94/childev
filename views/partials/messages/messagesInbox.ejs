                              
<div class="panel-group messages" id="accordion">
       

  <%  if( messagesFound.length>0){
      messagesFound.forEach(function(messageObject,index){ %>

      
    <%if(messageObject.to.read===true){%>     
      <div class="panel panel-info">
    <% }else{%>
      <div class="panel panel-primary">
    <% }%>  
        <div class="panel-heading">
          <span class="panel-title">
            <a data-toggle="collapse" class='messageCollapse' data-parent="#accordion" href="#collapse<%=index%>" >
                <%=messageObject.from.name%> (<%=messageObject.from.label%>)
            </a>
          </span>
           <span>
            <a class='btn btn-danger btn-xs pull-right' style='margin-left:5px;' 
              data-toggle='tooltip' title="Remove this message. (This will also remove this message from this User's Inbox"
              href='/dashboard/<%=currentUser.label%>/<%=currentUser._id%>/messages/inbox/<%=messageObject._id%>/delete'
              >
                 <i class='fa fa-fw fa-trash-o'></i>
            </a>
          </span>
         <span>
            <a class='btn btn-warning btn-xs pull-right' data-toggle='tooltip' title='Send New Message to this User.'
              href='/dashboard/<%=currentUser.label%>/<%=currentUser._id%>/messages/new?userIdTo=<%=messageObject.from.id%>&labelTo=<%=messageObject.from.label%>'
              >
                 <i class='fa fa-fw fa-reply'></i>
            </a>
          </span>
        </div>
        <%if(messageObject.to.read===true){%>     
            <div id="collapse<%=index%>" class="panel-collapse collapse">
        <% }else{%>
            <div id="collapse<%=index%>" class="panel-collapse collapse" data-messageid="<%=messageObject._id%>">
        <% }%>  
          <div class="panel-body">
             <ul>
              <li id='messageNameTo'><span><strong>Name: </strong></span><span class='info'><%=messageObject.from.name%></span></li>
              <li id='emailTo'><span><strong>Email: </strong></span><span class='info'><%=messageObject.from.username%></span></li>
              <li id='dateTo'><span><strong>Date: </strong></span><span class='info'><%=messageObject.dateCreated%></span></li>
             </ul>
                  <label for='messageContent'>Message: </label>
                  <textarea class="form-control" id="messageContent" rows='8' style=' resize:vertical ;' readOnly ><%=messageObject.message%></textarea>

            
          </div><!--panel-body-->
        </div><!--panel-collapse-->
      </div><!--panel-->
    <% }); }else{%>
        
            <h2>No messages</h2>
            
    <% }%>
    
</div><!-- accordion, panel gorup-->

