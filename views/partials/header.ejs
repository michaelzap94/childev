<body>

<nav class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
 <a href="/" class="navbar-brand" style="font-size: x-large"><strong>Childev</strong></a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
            
      <% if(currentUser){ %>
          <ul class="nav navbar-nav">
              <li><a href="#">Welcome <%= currentUser.username %></a></li>
          </ul>
       <% } %>     
       <% if(currentUser){ %>
            <ul class="nav navbar-nav navbar-right">
             <li><p class="navbar-btn"><a class="btn btn-danger" href="/logout">Logout</a></p></li> 
             <li>&nbsp; &nbsp;</li> 
            </ul>
       <% } %>
       <% if(!currentUser){ %>

          <ul class="nav navbar-nav navbar-right">
                <li class=" dropdown">
                    <a href="#" class="mydrop dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Staff Login<span class="caret"></span></a>
                    <ul class="dropdown-menu" style="padding:18px;">
                        <li><a><h4><strong>Access to the Manager's Platform</strong></h4></a></li>

                            <form method='POST' action='/login/staff/manager' ><!-- POSTS the username and password to login -->
                                <div class="form-group">
                                <input name='username' type="text" placeholder="Email" class="form-control">
                                </div>
                                <div class="form-group">
                                <input type="password" name='password' placeholder="Password" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-success  btn-block">Sign in as a Manager</button>
                            </form>

                        <li><a href="#j">Forgot username or password?</a></li>
                        
                        <li role="separator" class="divider"></li>

                        
                        <li><a><h4><strong>Access to the Teacher's Platform</strong></h4></a></li>

                            <form method='POST' action='/login/staff/teacher' ><!-- POSTS the username and password to login -->
                                <div class="form-group">
                                <input name='username' type="text" placeholder="Email" class="form-control">
                                </div>
                                <div class="form-group">
                                <input type="password" name='password' placeholder="Password" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-success  btn-block">Sign in as a Teacher</button>
                            </form>

                        <li><a href="#j">Forgot username or password?</a></li>
                    </ul>
                </li>
              </ul>

             <ul class="nav navbar-nav navbar-right">
                <li class=" dropdown">
                    <a href="#" class="mydrop dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Parent's Login<span class="caret"></span></a>
                    <ul class="dropdown-menu" style="padding:18px;">
                        <li><a><h4><strong>Access the progress of your child</h4></strong></a></li>

                        <li role="separator" class="divider"></li>
                            <form method='POST' action='/login/parent' ><!-- POSTS the username and password to login -->
                                <div class="form-group">
                                <input name='username' type="text" placeholder="Email" class="form-control">
                                </div>
                                <div class="form-group">
                                <input type="password" name='password' placeholder="Password" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-success  btn-block">Sign in</button>
                            </form>

                        <li role="separator" class="divider"></li>
                        <li><a href="#j">Forgot username or password?</a></li>
                    </ul>
                </li>
              </ul>
               <ul class="nav navbar-nav navbar-right">
                 
                 <li><a href="/register/nursery">Register your Nursery</a></li> <!-- GETS the form to login -->
               </ul>
       <% } %>
    </div>
  </div>
</nav>
