
<% include ../../partials/teacher/dashboardColumn.ejs %>

        <div id="page-wrapper">
            
            <% include ../../partials/flashMessage.ejs %>
            
            

            <div id='managerViewContainer' class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="page-header">
                            Inbox <small>Teacher</small>
                        </h2>
                        <ol class="breadcrumb">
                           <li class="active">
                                <% if(typeof messagesFound != 'undefined'){ %>
                                    <i class="fa fa-inbox"></i> Inbox  <span class="badge"><%= messagesFound.length%></span>
                                <% }else{ %>
                                    <i class="fa fa-inbox"></i> Inbox  <span class="badge">0</span>
                                <% } %>
                            </li>
                             <li>
                                <a class='btn btn-info btn-xs' href="/dashboard/<%=currentUser.label%>/<%=currentUser._id%>/messages/sent"><strong><i class="fa fa-fw fa-telegram"></i> Sent Mail</strong></a>
                            </li>
                            <li>
                                <a class='btn btn-success btn-xs' href="/dashboard/<%=currentUser.label%>/<%=currentUser._id%>/messages/new"><strong><i class="fa fa-fw fa-plus"></i> New Message</strong></a>
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                
                <div class="row">    
                    <div class="col-lg-12 col-md-12">
                           
                       <% if(typeof messagesFound != 'undefined'){ %>
                        <% include ../../partials/messagesInbox.ejs%>
                       <% }else{ %>    
                         <h2>No messages</h2>
                        <% } %>   
                           
                    </div><!-- /.col polls -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
